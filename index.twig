{% include '_header.twig' %}

<body id="pageBody">

<div id="divBoxed" class="container">

    <div class="transparent-bg" style="position: absolute;top: 0;left: 0;width: 100%;height: 100%;z-index: -1;zoom: 1;"></div>

    <div class="divPanel notop nobottom">
            <div class="row-fluid">
                <div class="span12">

                    <div id="divLogo">
                        <a href="{{ paths.theme }}index.html" id="divSiteTitle">{{ app.config.get('general/sitename') }}</a><br />
                        <a href="{{ paths.theme }}index.html" id="divTagLine">{{ app.config.get('general/payoff') }}</a>
                    </div>

	            </div>
            </div>   
            <div class="row-fluid">
                <div class="span12">
    					
                    <div id="divMenuRight" class="pull-right">
                    <div class="navbar">
                        <button type="button" class="btn btn-navbar-highlight btn-large btn-primary" data-toggle="collapse" data-target=".nav-collapse">
                            NAVIGATION <span class="icon-chevron-down icon-white"></span>
                        </button>
                        <div class="nav-collapse collapse">
                            <ul class="nav nav-pills ddmenu">
                                  {{ menu('main', '_sub_menu.twig') }}
                            </ul>
                        </div>
                    </div>
                    </div>

	            </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
    
                    <div id="headerSeparator"></div>

                    <div class="row-fluid">
                        <div class="span6">

                            <div id="divHeaderText" class="page-content">
                         
                                <div id="divHeaderLine1">{{ theme.headertext }}</div><br />
                                <div id="divHeaderLine2">{{ theme.secondlineheader }}</div><br />
                                <div id="divHeaderLine3"><a class="btn btn-large btn-secondary" href="{{ theme.secondarybuttonlink }}">{{ theme.secondarybuttontext }}</a>    <a class="btn btn-large btn-primary" href="{{ theme.primarybuttonlink }}">{{ theme.primarybuttontext }}</a></div>
                            </div>

                        </div>
                        <div class="span6">
                        {% setcontent fpimages='frontpageimage/latest/3' %}
                            <div id="camera_wrap">
                              {% for fpimage in fpimages %}
                              <div data-src="{{ fpimage.image|thumbnail(531,345) }}" ><div class="camera_caption fadeFromBottom cap2">{{ fpimage.title }}</div>                            </div>
                              {% endfor %}
                               </div>

                        </div>
                    </div>

                    <div id="headerSeparator2"></div>
        
                </div>
            </div>
   
    </div>

    <div class="contentArea">

        <div class="divPanel notop page-content">

            

            <div class="row-fluid">

                <div class="span12" id="divMain">
		  
                    <h1>{{ record.title }}</h1>

                    {{ record.teaser }}

                    <br />

                    <div class="row-fluid">
                        <div class="span4">
                        {% setcontent stuff='page/kids-carriages' %}
                            <h2>{{ stuff.title }}</h2>
                            <img src="{{ stuff.image|thumbnail(150,90,c) }}" class="img-polaroid" style="margin:5px 0px 15px;">                
                            {{ stuff.teaser }}<br /><a href="{{ stuff.link }}">Read More &raquo;</a>
                        </div>
                        <div class="span4">
                        {% setcontent stuff='page/hotels' %}
                            <h2>{{ stuff.title }}</h2>
                            <img src="{{ stuff.image|thumbnail(150,90,c) }}" class="img-polaroid" style="margin:5px 0px 15px;">                
                            {{ stuff.teaser }}<br /><a href="{{ stuff.link }}">Read More &raquo;</a>
                        </div>
                        <div class="span4">
                        {% setcontent stuff='page/pricelist' %}
                            <h2>{{ stuff.title }}</h2>
                            <img src="{{ stuff.image|thumbnail(150,90,c) }}" class="img-polaroid" style="margin:5px 0px 15px;">                
                            {{ stuff.teaser }}<br /><a href="{{ stuff.link }}">Read More &raquo;</a>
                        </div>
                      
                    </div>  

                </div>

            </div>

            <div id="footerInnerSeparator"></div>
        </div>
    </div>

  {% include '_footer.twig' %}  